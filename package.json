{
  "name": "inline",
  "version": "1.0.22",
  "description": "A Ghost theme",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "main": "'src/index.js'",
  "scripts": {
    "reload": "node utils/reload",
    "dev": "npm run reload & npm run watch",
    "watch": "NODE_ENV=development rollup -c -w",
    "build": "rm -rf 'assets/built' && NODE_ENV=production rollup -c",
    "zip": "npm run build && node utils/zip",
    "check": "gscan .",
    "css": "npx stylelint 'src/css/**/*.css' --fix",
    "eslint": "npx eslint 'src/js/**/*.js' --fix",
    "push": "npm version patch && git push",
    "fix": "npm run css & npm run eslint"
  },
  "keywords": [
    "ghost-theme"
  ],
  "author": {
    "name": "Ryan Feigenbaum",
    "email": "ryan.feigenbaum@gmail.com",
    "url": "https://ryanfeigenbaum.com"
  },
  "license": "MIT",
  "config": {
    "posts_per_page": 12,
    "image_sizes": {
      "xxs": {
        "width": 50
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 500
      },
      "l": {
        "width": 700
      },
      "xl": {
        "width": 1000
      },
      "xxl": {
        "width": 2000
      }
    },
    "custom": {
      "search_key": {
        "type": "text"
      },
      "search_url": {
        "type": "text"
      }
    }
  },
  "devDependencies": {
    "@babel/core": "7.22.9",
    "@babel/preset-env": "7.22.9",
    "@rollup/plugin-babel": "6.0.3",
    "@rollup/plugin-commonjs": "23.0.7",
    "@rollup/plugin-node-resolve": "15.1.0",
    "@rollup/plugin-replace": "5.0.2",
    "@rollup/plugin-terser": "^0.4.0",
    "adm-zip": "0.5.10",
    "cssnano": "5.1.15",
    "eslint": "8.46.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.28.0",
    "gscan": "4.37.5",
    "livereload": "0.9.3",
    "postcss": "8.4.27",
    "postcss-import": "15.1.0",
    "postcss-preset-env": "7.8.3",
    "rollup": "3.27.2",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-replace": "2.2.0",
    "stylelint": "14.16.1",
    "stylelint-config-recess-order": "3.1.0",
    "stylelint-order": "5.0.0"
  },
  "dependencies": {
    "highlight.js": "^11.7.0",
    "medium-zoom": "^1.0.8",
    "minisearch": "^6.0.0"
  },
  "type": "module"
}
